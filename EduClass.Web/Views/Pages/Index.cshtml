@model IOrderedEnumerable<EduClass.Entities.Page>

@{
    ViewBag.Title = "Index";
}

 @using (Html.BeginForm())
 {
    @Html.AntiForgeryToken()
    <!-- Page Content -->
    <div class="container">

        <div class="row">

            <div class="col-lg-12">
                <h1 class="page-header">Páginas</h1>
            </div>
            @foreach (var elemento in Model)
            {
                <div class="col-lg-2 col-md-3 col-xs-5 thumb">
                    <a class="thumbnail" href="@Url.Action("ViewPage", "Pages", new { id = elemento.Id })">
                        <img class="img-thumbnail" id="imagenes" src="@Url.Content("~/Content/images/images_file.png")" alt="" />
                    </a>
                    
                </div>
            }
            
        </div>

    </div>
    <!-- /.container -->
 }