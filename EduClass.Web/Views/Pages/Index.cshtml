@model IOrderedEnumerable<EduClass.Entities.Page>

@{
    ViewBag.Title = "Index";
}

 @using (Html.BeginForm())
 {
    @Html.AntiForgeryToken()
    <!-- Page Content -->
    <div class="container">

        <div class="row">

            <div class="col-lg-12">
                <h1 class="page-header">Páginas</h1>
            </div>
            @foreach (var elemento in Model)
            {
                <div class="col-lg-3 col-md-4 col-xs-6 thumb">
                    <a class="thumbnail" href="#">
                        @HelperView.LimitContentPage(elemento.Content, 500)
                    </a>
                </div>
            }
            
        </div>

    </div>
    <!-- /.container -->
 }