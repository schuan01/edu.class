@using EduClass.Web.Infrastructure.Sessions
@using EduClass.Entities

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>@ViewBag.Title | Edu.Class</title>
    @Styles.Render("~/Content/template")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", required: false)
</head>
<body>
    <header>
        <div class="headerpanel">
            @Html.Partial("~/Views/Menu/_menuTop.cshtml")
            
        </div><!-- header-->
    </header>

    <section>

        <div class="leftpanel">
            <div class="leftpanelinner">

                <!-- ################## LEFT PANEL PROFILE ################## -->

                <div class="media leftpanel-profile">
                    <div class="media-left">
                        <a href="@Url.Action("Me", "Users")">
                       @try
                       {
                           if (UserSession.GetCurrentUser().Avatar == null || UserSession.GetCurrentUser().Avatar.UrlPhoto == "")
                           {
                            <img src="@Url.Content("~/Content/images/default.png")" alt="" class="media-object img-circle">
                           }
                           else
                           {
                            <img src="@Url.Content(UserSession.GetCurrentUser().Avatar.UrlPhoto)" alt="" class="media-object img-circle">
                           }
                       }
                       catch (Exception ex)
                       {
                            <img src="@Url.Content("~/Content/images/default.png")" alt="" class="media-object img-circle">
                       }
                        </a>
                    </div>
                    <div class="media-body">
                        <h4 class="media-heading">@UserSession.GetCurrentUser().FirstName @UserSession.GetCurrentUser().LastName  </h4>
                        @if (@UserSession.GetCurrentUser() is Student)
                        {
                            <span>Estudiante</span>
                        }
                        else if (@UserSession.GetCurrentUser() is Teacher)
                        {
                            <span>Profesor</span>
                        }

                    </div>
                </div><!-- leftpanel-profile -->

                <div class="tab-content">

                    <!-- ################# MAIN MENU ################### -->
                    @Html.Partial("~/Views/Menu/_menuVertical.cshtml")
                </div><!-- tab-content -->

            </div><!-- leftpanelinner -->
        </div><!-- leftpanel -->

        <div class="mainpanel">

            <div class="contentpanel">
                @RenderBody()
            </div><!-- contentpanel -->
        </div><!-- mainpanel -->
    </section>

    <div class="container body-content">
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Edu.Class</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/template")
    @RenderSection("scripts", required: false)

    @{var sessionMessage = EduClass.Web.Infrastructure.Sessions.MessageSession.GetMessage(); }
    <script type="text/javascript">
        var message = "@Html.Raw(sessionMessage.ToString())";
        if (message != "") {

            showMessageJS(message);
        }
    </script>
</body>
</html>
